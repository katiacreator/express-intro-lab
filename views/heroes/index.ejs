<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Heroes Database</title>
  </head>

  <body>
    <h1>Heroes</h1>
    <% if(error) { %>
    <h2><%= error %></h2>
    <% } %>
    <ul>
      <% heroes.forEach(function(hero) { %>
      <li><%= hero.text %> - <%= hero.survived ? 'survived' : 'dead, but will live forever in our hearts' %></li>
      <% }) %>
    </ul>
  </body>
</html>